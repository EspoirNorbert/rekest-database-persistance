<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 5.3//EN" 
	"http://hibernate.org/dtd/hibernate-mapping-5.3.dtd">
<hibernate-configuration>
	<session-factory>
		<property name = "hbm2ddl.auto">create</property>
		<property name = "hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name = "hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name = "hibernate.connection.url">jdbc:mysql://localhost:3308/starter-project?serverTimezone=UTC</property>
		<property name = "hibernate.connection.username">root</property>
		<property name = "hibernate.connection.password"></property>
		
		<mapping class="com.app.entities.employes.Employe" />
		<mapping class="com.app.entities.employes.Utilisateur" />
		<mapping class="com.app.entities.employes.Gestionnaire" />
		<mapping class="com.app.entities.employes.Manager" />
		<mapping class="com.app.entities.employes.Administrateur" />
		<mapping class="com.app.entities.employes.Directeur" />
		<mapping class="com.app.entities.employes.ChefService" />
		<mapping class="com.app.entities.employes.DirecteurGeneral" />
		<mapping class="com.app.entities.Notification" />
		<mapping class="com.app.entities.Demande" />
		<mapping class="com.app.entities.Role" />
		<mapping class="com.app.entities.Note" />
		<mapping class="com.app.entities.Produit" />
		<mapping class="com.app.entities.Service" />
		<mapping class="com.app.entities.Departement" />		

	</session-factory>
</hibernate-configuration>
